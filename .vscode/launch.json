    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: With Venv",
            "type": "python",
            "request": "launch",
            "program": "./src/main.py",
            // "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "VIRTUAL_ENV": "${workspaceFolder}/venv/bin/activate"
            },
            "args": [],
            "debugOptions": [
                "RedirectOutput"
            ]
        },

        {
            "name": "Python: Without Venv",
            "type": "python",
            "request": "launch",
            "program": "./src/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}